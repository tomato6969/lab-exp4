#include <iostream>
#include<set>
using namespace std;

int main() 
{
    int a=5;
    int set;
    int reset;
    int bit_to_be_set;
    int bit_to_be_reset;
    
    cout<<"enter the bit position to be set:";
    cin>>bit_to_be_set;
    set = a|(1<<bit_to_be_set);
    cout<<"enter the posityion to be reset:";
    cin >> bit_to_be_reset;
    reset = a&(-(2<<bit_to_be_reset));
    cout<<"your number to be reset :"<<set<<endl;
    cout<<"your number to be set :"<<reset<<endl;

    return 0;
}

OUTPUT:
enter the bit position to be set:2
enter the posityion to be reset:1
your number to be reset :5
your number to be set :4
